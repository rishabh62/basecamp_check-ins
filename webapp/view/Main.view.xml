<mvc:View controllerName="basecamp_check-ins.controller.Main" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" displayBlock="true" xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<FlexBox alignItems="Start" justifyContent="Center">
						<items>
							<ComboBox/>
							<Button class="sapUiTinyMarginBegin" text="Get check-ins" press="onGetCheckIns"/>
						</items>
					</FlexBox>
					<List id="listId" class="sapUiContentPadding" headerText="Check-ins" items="{checkinsModel>/}">
						<CustomListItem class="marginAll">
							<!--<FormattedText htmlText="{content}"/>-->
							<Text class="bold" text="{parts:[ {path: 'checkinsModel>creator/name'}, {path: 'checkinsModel>created_at'}]}"/>
							<core:HTML content="{checkinsModel>content}"></core:HTML>
						</CustomListItem>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>